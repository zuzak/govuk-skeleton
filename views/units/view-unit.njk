{% extends "../template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
   {% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
{{ super ()}}
{{ govukBackLink({
  text: "Unit search",
  href: "/unit"
}) }}
{% endblock %}
{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">
                {{ unit.displayName }}<span class="govuk-visually-hidden">,</span>
            </h1>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">
                This team appears in extracts as <strong>{{unit.shortCode}}</strong>.
            </p>
        </div>
    </div>
   
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
           <h2 class="govuk-heading-m">Teams in this unit</h2>
           <ul; class="govuk-list govuk-list--bullet">
               {% for team in teams %}
               <li>
                   {% if not team.active %}
                   <s>
                    {% endif %}
                   <a class="govuk-link" href="/team/{{team.type}}">{{team.displayName}}</a>
                   {% if not team.active %}
                   </s>
                    {% endif %}
                </li>
                {% endfor %}
        </div>
    </div>
{% endblock %}
