{% extends "../template.njk" %}
{% set mainClasses = "govuk-main-wrapper--l" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Sorry, there is a problem with the service</h1>

  {% if not development %}
      <p class="govuk-body">Try again later.</p>
  {% else %}
      {% if err %}
        {% if err.message %}
      <p class="govuk-body">The error message is: <samp>{{ err.message }}</samp>
        {% endif %}

        {% if err.stack %}
      <details class="govuk-details" data-module="govuk-details" open>
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">Stack trace</span>
        </summary>
        <div class="govuk-details__text">
          <pre class="code">{{ err.stack }}</pre>
        </div>
      </details>
        {% endif %}
      {% else %}
        <p class="govuk-body">
          You&rsquo;re running this application in development mode,
          but no further details are available.
        </p>
      {% endif %}
    </div>
  </div>
  {% endif %}
{% endblock %}